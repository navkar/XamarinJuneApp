<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JuneApp.ContentA">
  <ContentView.Content>
        <Grid BackgroundColor="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Text="Top Left" Grid.Row="0" Grid.Column="0" />
            <Label Text="Top Right" Grid.Row="0" Grid.Column="1" />
            <Label Text="Bottom Left" Grid.Row="1" Grid.Column="0" />
            <StackLayout Grid.Row="1" Grid.Column="1" BackgroundColor="#9D50BB">
                <Label FontSize="Large" FontAttributes="Bold" FontFamily="Verdana" 
                       TextColor="White" Text="{Binding Caption}" Grid.Row="1" Grid.Column="0" />
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>