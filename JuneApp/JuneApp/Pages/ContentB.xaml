<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JuneApp.ContentB">
  <ContentView.Content>
      <StackLayout>
          <Label FontSize="Large" FontAttributes="Bold" Text="Set the Caption" />
            <Entry Text="{Binding Caption}"  />
            <Button Text="Show Me!" Command="{Binding OpenDialogCommand}" />
        </StackLayout>
  </ContentView.Content>
</ContentView>